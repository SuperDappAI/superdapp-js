{
  "compilerOptions": {
  "lib": ["es2022", "DOM"],

    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["index.ts", "src/**/*.ts"]
}
